{
    "name": "blocks/footer",
    "title": "网页底部",
    "icon": "http://up.img.heidiancdn.com/o_1anhon7unen214vsu0mudm1fjq0.png",
    "settings_schema": [
        {
            "type": "Layout",
            "presets": [{
                "__layout__": "A",
                "annotation": "菜单居中，LOGO居左，其他居右"
            }, {
                "__layout__": "B",
                "annotation": "LOGO居左，菜单居右，其他居中"
            }, {
                "__layout__": "C",
                "annotation": "LOGO居右，菜单居左，其他居中"
            }, {
                "__layout__": "D",
                "annotation": "table式布局带边缘和title，logo居左，菜单和其他居右"
            }]
        },
        {
            "title": "是否限宽",
            "type": "Selection",
            "id":"container",
            "options": [
                { "text": "限宽", "value": "container" },
                { "text": "不限宽", "value": "container--full" }
            ]
        },
        {
            "title": "底部图片",
            "id":"footer_image",
            "global": true
        },
        {
            "title": "底部图片高度",
            "id":"footer_image_height",
            "global": true
        },
        {
            "title": "配色风格",
            "id":"colorstyle",
            "type": "Selection",
            "options": [
                { "text": "深色", "value": "dark" },
                { "text": "浅色", "value": "light" }
            ]
        },
        {
            "title": "透明度",
            "id": "opacity",
            "type": "Range",
            "min":0,
            "step":0.1,
            "max":1
        },
        {
            "title": "是否包含社交账号",
            "id":"logo_social",
            "type": "Boolean"
        },
        {
            "title": "是否包含品牌口号",
            "id":"logo_slogan",
            "type": "Boolean"
        },
        {
            "title": "是否包含地址",
            "id":"address",
            "type": "Boolean"
        }
    ],
    "settings_data": {
        "__layout__": "A",
        "annotation": "菜单居中，LOGO居左，其他居右",
        "opacity": 1,
        "colorstyle": "dark",
        "container": "container",
        "logo_social": true,
        "logo_slogan": true,
        "address": true
    },
    "metafield": {
        "category": "footer"
    }
}
